    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/bin/homebridge",
            "args": [
                "DEBUG=*",
                "-D",
                "-P",
                "example-plugins/",
                "||",
                "true"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "port": 9229
        }
    ]
}